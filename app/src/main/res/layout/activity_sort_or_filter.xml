<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_sort"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/sort_cancel"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:background="#BD2CA0"
        android:src="@drawable/baseline_cancel_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort and Filter"
        android:textColor="#BD2CA0"
        android:paddingLeft="55dp"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp">

    </Space>

    <!-- Place other views and elements here -->

    <!-- Sorted by block -->

    <RelativeLayout
        android:id="@+id/sort_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sorted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sorted By: "
                android:textColor="#BD2AC0"
                android:textSize="22sp" />

            <Spinner
                android:id="@+id/sort_spinner"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:background="#BD2AC0"
                android:entries="@array/sort_criteria" />

            <ImageButton
                android:id="@+id/switch_sort"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:contentDescription="Click to switch the sorting of items"
                android:src="@drawable/rsz_arrow" />
        </LinearLayout>



    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp"></Space>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="30dp"></View>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"></Space>

    <TextView
        android:id="@+id/filter_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter By"
        android:textColor="#BD2CA0"
        android:paddingLeft="29dp"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="15.5dp">

    </Space>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#BD2CA0"
        android:paddingLeft="250dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="51dp"
        android:layout_marginLeft="20dp"
        android:background="@color/black"
        android:padding="8dp">

        <!-- Repeat similar structure for other TextViews and Views -->

        <TextView
            android:id="@+id/before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:text="Before"
            android:textColor="#BD2CA0"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/date_before"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/before"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="3dp"
            android:background="#BD2CA0"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="362dp"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:background="@color/black"
        android:padding="8dp">

        <!-- Repeat similar structure for other TextViews and Views -->

        <TextView
            android:id="@+id/after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:text="After"
            android:textColor="#BD2CA0"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/date_after"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/after"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="6dp"
            android:background="#BD2CA0"
            android:text="Date"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="25dp"></Space>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="30dp"></View>

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp"></Space>

    <RelativeLayout
        android:layout_width="365dp"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:background="@color/black"
        android:padding="8dp">

        <!-- Repeat similar structure for other TextViews and Views -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Make"
            android:textColor="#BD2CA0"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/make"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="3dp"
            android:background="#BD2CA0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="25dp"></Space>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="30dp"></View>

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp"></Space>

    <RelativeLayout
        android:layout_width="363dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:background="@color/black"
        android:padding="8dp">

        <!-- Repeat similar structure for other TextViews and Views -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Tags"
            android:textColor="#BD2CA0"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tags"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="3dp"
            android:background="#BD2CA0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>
    <!-- Add other EditTexts, Spinners, etc. -->

    <Space
        android:layout_width="wrap_content"
        android:layout_height="25dp"></Space>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="30dp"></View>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="35dp"></Space>


    <RelativeLayout
        android:layout_width="376dp"
        android:layout_height="58dp"
        android:layout_marginLeft="20dp"
        android:background="@color/black"
        android:padding="8dp">

        <!-- Repeat similar structure for other TextViews and Views -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_button"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="#BD2AC0"
            android:text="Apply"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_button"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="193dp"
            android:layout_marginBottom="0dp"
            android:background="#BD2AC0"
            android:text="Reset"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF" />



</LinearLayout>