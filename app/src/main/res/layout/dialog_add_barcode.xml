<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Barcode"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/defaultPurple"
        android:layout_marginBottom="10dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="15dp"

        android:textColor="@color/defaultPurple"
        android:layout_marginBottom="10dp">

    </TextView>
    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:padding="12dp"
        android:background="@drawable/border_pink"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make"
        android:textStyle="bold"
        android:textSize="15dp"

        android:textColor="@color/defaultPurple"
        android:layout_marginBottom="10dp">

    </TextView>
    <EditText
        android:id="@+id/make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@drawable/border_pink"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estimated Value"
        android:textStyle="bold"
        android:textSize="15dp"

        android:textColor="@color/defaultPurple"
        android:layout_marginBottom="10dp">

    </TextView>
    <EditText
        android:id="@+id/estimatedValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_pink"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <Button
                android:id="@+id/choose_photo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BD2AC0"
                android:textColor="@color/black"
                android:text="Choose Photo"

                android:textSize="15dp"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/take_photo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BD2AC0"
                android:textColor="@color/black"
                android:text="Take Photo"
                android:textSize="15dp"/>
        </LinearLayout>





</LinearLayout>